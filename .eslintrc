{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "plugins": [
    "react",
    "react-hooks"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/all"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "no-console": "off",
    "quotes": ["error", "single"],
    "no-unused-vars": ["error", {
      "argsIgnorePattern": "^_"
    }],
    "jsx-quotes": "warn",
    "react/prop-types": "off",
    "react/jsx-indent": ["warn", 2],
    "react/jsx-indent-props": ["warn", 2],
    "react/forbid-component-props": "off",
    "react/no-multi-comp": ["error", {
      "ignoreStateless": true
    }]
  }
}
